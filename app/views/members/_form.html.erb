<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :profile_Picture %><br>
    <%= f.file_field :profilepic, :class => "btn btn-default" %>
  </div>
  <div class="form-group">
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation, :class => "form-control", input_html: {:autofocus => true}, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :birthday %><br>
    <%= f.date_select :bday, :start_year => Date.current.year, :end_year => Date.current.year-80%>
  </div>
  <div class="form-group">
    <%= f.submit "Update Profile", class: "btn btn-info"%>
  </div>
<% end %>
